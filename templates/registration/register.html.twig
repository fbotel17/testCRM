{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header text-center">
                        <h2>Créer un compte</h2>
                    </div>
                    <div class="card-body">
                        {# Affichage des messages d'erreur (flash) #}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {# Affichage des messages de succès (flash) #}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(registrationForm) }}
                            
                            <div class="mb-3">
                                {{ form_label(registrationForm.email, 'Adresse e-mail') }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger">
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(registrationForm.prenom, 'Prénom') }}
                                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger">
                                    {{ form_errors(registrationForm.prenom) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(registrationForm.nom, 'Nom') }}
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger">
                                    {{ form_errors(registrationForm.nom) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(registrationForm.password, 'Mot de passe') }}
                                {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger">
                                    {{ form_errors(registrationForm.password) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(registrationForm.confirmPassword, 'Confirmer le mot de passe') }}
                                {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger">
                                    {{ form_errors(registrationForm.confirmPassword) }}
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-lg">S'inscrire</button>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                    <div class="card-footer text-center">
                        <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
